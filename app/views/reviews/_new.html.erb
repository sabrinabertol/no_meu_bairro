<div class="background-card-reviews">
  <% if user_signed_in? %>
    <p><strong>Have you been to this service before? Leave a review!</strong></p>
    <%= simple_form_for [@neighbourhood, @service, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
      <%= f.submit %>
      <% end %>
  <% else %>

    <% end %>

<%= link_to new_user_session_path do %>
  <button type="button" class="btn btn-outline-success mt-3">Log in to leave a review!</button>
<% end %>
